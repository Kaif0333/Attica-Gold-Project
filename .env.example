APP_NAME=Attica Gold Backend
ENVIRONMENT=development
DATABASE_URL=sqlite:///./attica_gold.db

# Session and security
ATTICA_SECRET_KEY=change-this-in-production
SESSION_HTTPS_ONLY=0
SESSION_SAMESITE=lax

# API docs exposure
DOCS_ENABLED=1
REDOC_ENABLED=1
AUTO_RUN_MIGRATIONS=1
LOG_LEVEL=INFO
REQUEST_ID_HEADER=X-Request-ID
LOGIN_MAX_ATTEMPTS=5
LOGIN_WINDOW_SECONDS=900
LOGIN_LOCKOUT_SECONDS=900

# Optional admin bootstrap account
ATTICA_ADMIN_EMAIL=
ATTICA_ADMIN_PASSWORD=
