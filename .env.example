APP_NAME=Attica Gold Backend
ENVIRONMENT=development
DATABASE_URL=sqlite:///./attica_gold.db

# Session and security
ATTICA_SECRET_KEY=change-this-in-production
# For production behind HTTPS, set SESSION_HTTPS_ONLY=1 and SESSION_SAMESITE=strict.
SESSION_HTTPS_ONLY=0
SESSION_SAMESITE=lax

# API docs exposure
DOCS_ENABLED=1
REDOC_ENABLED=1
AUTO_RUN_MIGRATIONS=1
LOG_LEVEL=INFO
REQUEST_ID_HEADER=X-Request-ID
LOGIN_MAX_ATTEMPTS=5
LOGIN_WINDOW_SECONDS=900
LOGIN_LOCKOUT_SECONDS=900
PASSWORD_MIN_LENGTH=8
RESET_TOKEN_TTL_MINUTES=30
EXPOSE_RESET_TOKEN_IN_RESPONSE=0
OTP_TTL_SECONDS=300
EXPOSE_OTP_IN_RESPONSE=0
OTP_RESEND_COOLDOWN_SECONDS=45
OTP_MAX_RESENDS=3
SMTP_ENABLED=0
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=1
SMTP_SENDER_EMAIL=
SMTP_SENDER_NAME=Attica Gold

# Optional admin bootstrap account
ATTICA_ADMIN_EMAIL=
ATTICA_ADMIN_PASSWORD=
